

<GridLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="5"
    android:layout_row="2">


    <TextView
        android:id="@+id/symbol_widget"
        style="@style/StockSymbolTextStyleWidget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:gravity="start|center_vertical"
        android:layout_column="0"
        android:layout_columnSpan="1"
        tools:text="@string/str_google_text" />


<ImageView
    android:id="@+id/imageview_widget_stock_updown"
    android:gravity="center_vertical"
    android:src="@drawable/stock_up"
    style="@style/imageViewStockUpDown"
    android:layout_column="1" />


    <TextView
        android:id="@+id/price_widget"
        style="@style/BidPriceTextStyleWidget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_toLeftOf="@+id/change_widget"
        android:layout_centerHorizontal="true"
        tools:text="@string/str_text_price" />


    <TextView
        android:id="@+id/textview_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_gravity="fill|center" />

    <TextView
        android:id="@+id/change_widget"
        style="@style/PercentChangeTextStyleWidget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/percent_change_pill_green"
        android:layout_column="4"
        android:layout_alignParentEnd="true"
        tools:text="@string/res_change_widget" />

    <ImageView
        android:id="@+id/imageview_widget"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:src="@android:drawable/divider_horizontal_dark"
        android:layout_width="fill_parent"
        style="@style/imageViewStyleWidget"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_columnSpan="5" />

</GridLayout>
